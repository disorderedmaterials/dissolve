# File: 'test/argon-large.not'
# AtomType Definitions
AtomTypes
  AtomType  'Ar'   Ar  'Xe'
EndAtomTypes

# Species Definitions
Species 'Argon'
  # Atoms
  Atom    1   Ar     0.000    0.000    0.000    0.000 'Ar'

  # Grain Definitions
  Grain  'Ar'  1

  # Isotopologues
  Isotopologue  'Ar36'  Ar=36
EndSpecies

# System Composition
System
  Multiplier  10000
  Density  0.021300  atoms/A3
  CellLengths  1.000000  1.000000  1.000000
  CellAngles  90.000000  90.000000  90.000000
  Component  'Argon'  1.000000  1.000000  1
  File 'test/argon-85K-medium.xyz'
EndSystem

# Samples
# One sample - experimental data taken from Table 1 of Yarnell, Katz, Wenzel, and Koenig, Phys. Rev. A 7, 2130 (1973).
# Liquid Ar346 at 85 K. Data are normalised <b2>, and oscillate around 1.0 (i.e. contain incoherent background).
Sample  'Koenig-85K'
  Isotopologue  'Argon'  'Ar36'  1.000000  1.000000
  ReferenceData  'test/argon-85K-large-exp.ref'
  NormalisedToAvSq
  SubtractSelf
  FitQMin  0.2
EndSample

# Pair Potentials
PairPotentials
  Range  15.000000
  Delta  0.050000
  TruncationWidth  2.000000
  Dispersion  'Ar'  'Ar'  3.166000  0.650000	# Potential parameters used in argon-85K-s3.166e0.65.txt
EndPairPotentials

# Setup
Setup
  Seed  943826
  Temperature  85.000000
  RDFRange 50.0
  BoxNormalisationPoints 500000000
  BoxNormalisationFile 'test/argon-85K-medium.box.norm'
EndSetup

# Simulation
Simulation

#@Equilibration
#  t 1000.0
#  50 as 1 10.0

@Shake
  5 as 1 15.0
  pair
  savesq

@Strategy
  pair
  savesq
  perturb
  savepp
  loop
    shake
    perturb
    savepp
  endloop

EndSimulation

